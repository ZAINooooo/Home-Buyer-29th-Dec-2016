<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">


        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="com.example.asad.homebuyerproject.PostProperty">


            <ImageView
                android:id="@+id/Backgroundimage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/background2" />


            <Button

                android:id="@+id/Readytogo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rectanglebutton"
                android:text="Add Detail"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />


            <include
                android:id="@+id/app_bar"
                layout="@layout/appbartransparent"></include>


            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80dp"
                android:layout_marginTop="40dp"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/asadzain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/Quick"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:text="@string/share1"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/share2"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"

                        />


                    <LinearLayout
                        android:id="@+id/images"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"

                        android:weightSum="1">

                        <ImageView
                            android:id="@+id/image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="12dp"
                            android:layout_marginStart="12dp"
                            android:background="@drawable/cover_1" />

                    </LinearLayout>


                    <TextView

                        android:paddingTop="10dp"
                        android:id="@+id/zakhzakhzakhzaklhzakhzakhzakhzkahzkah"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:text="Additional Info"
                        android:textColor="#212121"
                        android:background="#FFFFFF"/>

                    <Button
                        android:text="Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/photobutton" />

                </LinearLayout>



                <RelativeLayout
                    android:background="#FFFFFF"
                    android:layout_below="@+id/asadzain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/top1">

                   <!-- <LinearLayout
                        android:id="@+id/Replace_Gallery_Image12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >

                        <ImageView
                            android:id="@+id/Upload_Photos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/upload" />


                    </LinearLayout>-->

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="100dp">

                        <LinearLayout
                            android:id="@+id/imageGallery"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" />
                    </HorizontalScrollView>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/Replace_Gallery_Image"
                        >



                    </LinearLayout>
                </RelativeLayout>


                <Button
                    android:text="Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button2" />

                <LinearLayout

                    android:layout_below="@+id/top1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:background="#ffffff">


                    <LinearLayout
                        android:id="@+id/Block2"
                        android:layout_width="match_parent"
                        android:layout_height="869dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="Direction Facing"
                            android:textColor="#212121" />


                        <EditText
                            android:id="@+id/DirectionFacingResult"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/rectangle"
                            android:hint="Directiopn Comes Here"
                            android:paddingLeft="10dp"
                            android:inputType="textMultiLine"
                            android:digits="abcdefghijklmnopqrstuvwxyz"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Add More Property Details"
                            android:textColor="#212121" />

                        <EditText
                            android:id="@+id/AddMoreDetailsResult"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:hint="Property Description Comes Here"
                            android:paddingLeft="10dp"
                            android:background="@drawable/rectangle"
                            android:inputType="textMultiLine"
                            android:digits="abcdefghijklmnopqrstuvwxyz"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="Amenities"
                            android:textColor="#212121" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:id="@+id/PanelOne"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical">

                                <CheckBox
                                    android:id="@+id/PowerBack"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:text="Power Back Up" />

                                <CheckBox
                                    android:id="@+id/RainWater"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:text="Rain Water..." />

                                <CheckBox
                                    android:id="@+id/SwimmingPool"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:text="Swimming Pool" />

                                <CheckBox
                                    android:id="@+id/Park"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:text="Park" />

                                <CheckBox
                                    android:id="@+id/Security"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:text="Security" />

                                <CheckBox
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:text="Servie/Goods Lift" />

                                <CheckBox
                                    android:id="@+id/ServiceStaff"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:text="Maintenance Staff" />

                                <CheckBox
                                    android:id="@+id/LaundaryService"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:text="Laundary Servie" />

                                <CheckBox
                                    android:id="@+id/BanquetHall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:text="Banquet Hall" />

                                <CheckBox
                                    android:id="@+id/Jogging"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:text="Jogging and..." />

                                <CheckBox
                                    android:id="@+id/Terrace"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:text="Provate Terrace" />

                                <CheckBox
                                    android:id="@+id/AirConditioned"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:text="Air Conditioned" />

                                <CheckBox
                                    android:id="@+id/Wifi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:text="Internet/Wifi" />

                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/Panel2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical">

                                <CheckBox
                                    android:id="@+id/Lift"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:text="Lift" />

                                <CheckBox
                                    android:id="@+id/ClubHouse"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:text="Club House" />

                                <CheckBox
                                    android:id="@+id/Gymnasium"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:text="Gymnasium" />

                                <CheckBox
                                    android:id="@+id/ReservedParking"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:text="Reserved Parking" />

                                <CheckBox
                                    android:id="@+id/WaterStorage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:text="Water Storage" />

                                <CheckBox
                                    android:id="@+id/VisitorParking"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:text="Visitor Parking" />

                                <CheckBox
                                    android:id="@+id/WasteDisposal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:text="Waste Disposal" />

                                <CheckBox
                                    android:id="@+id/DthTelevision"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:text="DTH Television" />

                                <CheckBox
                                    android:id="@+id/Bar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:text="Bar/Lounge" />

                                <CheckBox
                                    android:id="@+id/Tennis"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:text="Outdoor Tennis..." />

                                <CheckBox
                                    android:id="@+id/Compliant"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:text="Vaastu Compliant" />

                                <CheckBox
                                    android:id="@+id/Intercom"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:text="Intercom Facility" />

                                <CheckBox
                                    android:id="@+id/WaterFilter"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:text="Filter Water System" />


                            </LinearLayout>


                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_gravity="start"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="20dp"
                            android:background="#E0E0E0"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Tenants You prefer"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"

                            >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:id="@+id/panelthree">

                                <CheckBox
                                    android:id="@+id/CoupleFamily"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Couple/Family" />

                                <CheckBox
                                    android:id="@+id/WithoutPets"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Without Pets" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="33dp"
                                android:orientation="vertical"
                                android:id="@+id/panelfour">


                                <CheckBox
                                    android:id="@+id/Vegetarians"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Vegetarians" />

                                <CheckBox
                                    android:id="@+id/WithFamily"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="With Company.." />
                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>




            </RelativeLayout>


        </FrameLayout>
    </ScrollView>

    <fragment
        android:id="@+id/fragment_navigation1"
        android:name="com.example.asad.homebuyerproject.NavigationBar"
        android:layout_width="@dimen/navigationdrawerwidth"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:layout="@layout/fragment_navigation"
        tools:layout="@layout/fragment_navigation" />


</android.support.v4.widget.DrawerLayout>