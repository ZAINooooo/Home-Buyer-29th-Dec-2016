<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.asad.homebuyerproject.Builder_Broker_Fragment"

        >

        <!-- TODO: Update blank fragment layout -->


        <LinearLayout
            android:id="@+id/Panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">


            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="80dp"
                android:paddingTop="20dp"
                android:text="@string/ShowCase1"
                android:textSize="20sp"
                android:textStyle="normal" />


            <Button

                android:id="@+id/Login"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/text1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/rectanglebutton"
                android:text="Login"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Readytogo"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:text="Need Help ?"
                android:textColor="#FFFFFF" />


            <Button
                android:id="@+id/Register"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/text2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/rectanglbuttongrey"
                android:text="Register"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />


        </LinearLayout>


        <RelativeLayout
            android:id="@+id/panel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/rectanglesmallcorner">

            <EditText
                android:id="@+id/Company_name"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/rectanglewithoutcorners"
                android:hint="Company Name"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:singleLine="true" />

            <View

                android:id="@+id/asad"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/Company_name"
                android:layout_gravity="start"
                android:background="#E0E0E0"


                />

            <EditText
                android:id="@+id/Company_detail"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/asad"
                android:background="@drawable/rectanglewithoutcorners"
                android:hint="Write About your Company"
                android:inputType="text|textMultiLine"
                android:paddingLeft="10dp"
                android:singleLine="true" />

            <View
                android:id="@+id/asad1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/Company_detail"
                android:layout_gravity="start"
                android:background="#E0E0E0"


                />

            <EditText
                android:id="@+id/Company_address"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/asad1"
                android:background="@drawable/rectanglewithoutcorners"
                android:hint="Company Address"
                android:inputType="text|textMultiLine"
                android:paddingLeft="10dp"
                android:singleLine="false" />

            <View
                android:id="@+id/asad12"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/Company_address"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:background="#E0E0E0"

                />


            <AutoCompleteTextView
                android:id="@+id/city"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/asad12"
                android:background="@drawable/rectanglewithoutcorners"
                android:ems="10"
                android:hint="City"
                android:paddingLeft="10dp"
                android:inputType="text">

                <requestFocus />
            </AutoCompleteTextView>

            <View


                android:id="@+id/asad123"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/city"
                android:layout_gravity="start"
                android:background="#E0E0E0"

                />

        </RelativeLayout>


        <Button

            android:id="@+id/Next"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="400dp"
            android:background="@drawable/rectanglebutton"
            android:text="Next"
            android:textColor="#FFFFFF"
            android:textSize="18sp"

            />


    </RelativeLayout>

</ScrollView>

